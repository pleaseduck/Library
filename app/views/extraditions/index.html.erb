<% content_for :title, "Выдачи" %>
<h1>Выдачи</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <table class="table">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
          <h4>Выберите библиотеку</h4>
        </thead>

        <tbody>
          <% @libraries.each do |library| %>
          <tr>
            <td><%= link_to library.name, extraditions_path(library_id: library.id) %></td>
          </tr>
        <% end %>
        <%= will_paginate @libraries %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-9 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
          <h4>Список выдач</h4>
        </thead>

        <tbody>
          <% @extraditions.each do |extradition| %>
            <tr>
              <td>Идентификатор абонента: <%= extradition.subscriber_id %></td>
              <td>Идентификатор книги: <%= extradition.book_id %></td>
              <td><%= link_to 'Показать', extradition %></td>
              <td><%= link_to 'Редактировать', edit_extradition_path(extradition) %></td>
              <td><%= link_to 'Удалить', extradition, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'Добавить выдачу', new_extradition_path %>
    </div>
  </div>
</div>
