
<%= simple_form_for(@extradition) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :subscriber, label: 'Абонент', collection: Subscriber.all.where(library_id: params[:library_id])%>
    <%= f.association :book, label: 'Книга', collection: Book.all.where(library_id: params[:library_id]) %>
    <%= f.input :extradition_date, as: :string, input_html: {type: :date}, label: 'Дата выдачи' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Добавить выдачу' %>
  </div>

<% end %>
