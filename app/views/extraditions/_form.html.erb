
<%= simple_form_for(@extradition) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :subscriber_id, label: 'Идентификатор абонента' %>
    <%= f.input :book_id, label: 'Идентификатор книги' %>
    <%= f.input :extradition_date, label: 'Дата выдачи' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Добавить выдачу' %>
  </div>

<% end %>
