<% content_for :title, "Редактирование библиотеки" %>

<h1>Редактировать запись</h1>

<%= simple_form_for(@library) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Наименование библиотеки'%>
    <%= f.input :number, label: 'Номер библиотеки'%>
    <%= f.input :address, label: 'Адрес библиотеки'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Сохранить изменения' %>
  </div>

<% end %>

<%= link_to 'Назад', libraries_path %>
