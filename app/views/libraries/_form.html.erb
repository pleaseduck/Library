
<%= simple_form_for(@library) do |f| %>


  <div class="form-inputs">
    <%= f.input :name, label: 'Наименование библиотеки'%>
    <%= f.input :number, label: 'Номер библиотеки'%>
    <%= f.input :address, label: 'Адрес библиотеки'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Добавить библиотеку' %>
  </div>

<% end %>
