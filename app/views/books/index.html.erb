<% content_for :title, "Книги" %>

<h1>Книги</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <table class="table">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
          <h4>Выберите библиотеку</h4>
        </thead>

        <tbody>
          <% @libraries.each do |library| %>
          <tr>
            <td><%= link_to library.name, books_path(library_id: library.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-9 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
          <h4>Список книг</h4>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.name %></td>
              <td><%= link_to 'Показать', book %></td>
              <td><%= link_to 'Редактировать', edit_book_path(book) %></td>
              <td><%= link_to 'Удалить', book, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Добавить книгу', new_book_path %>
    </div>
  </div>
</div>
